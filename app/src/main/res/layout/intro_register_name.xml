<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/intro_welcom_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/splashscreen_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="16dp"
        android:layout_height="match_parent">


        <TextView
            android:text="Enter your name"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/intro_register_username"
            android:layout_width="match_parent"
            android:textColorHint="@color/hint_color"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"/>


        <Button
            android:id="@+id/intro_register_username_next"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/login_button_background"
            android:text="Continue"
            android:textColor="@color/login_button_text_color"
            android:textStyle="bold"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>